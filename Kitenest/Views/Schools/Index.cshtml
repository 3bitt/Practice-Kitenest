@model IEnumerable<Kitenest.Models.School>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Continent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolTime.openHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolTime.closeHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolTime.workingFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolTime.workingTo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Continent.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolTime.openHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolTime.closeHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolTime.workingFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolTime.workingTo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
