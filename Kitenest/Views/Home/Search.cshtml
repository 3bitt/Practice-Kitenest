                    <span class="input-group-addon" id="status"><b>Status</b></span>
                    <span class="input-group-addon radio-custom">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" id="defaultChecked" name="radioAll" checked>
                            <label class="custom-control-label" for="defaultUnchecked">All</label>
                        </div>
                    </span>
                    <span class="input-group-addon radio-custom">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" id="defaultUnchecked" name="radioOpen">
                            <label class="custom-control-label" for="defaultChecked">Open</label>
                        </div>
                    </span>
                    <span class="input-group-addon radio-custom">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" id="defaultUnchecked" name="radioClose">
                            <label class="custom-control-label" for="defaultChecked">Closed</label>
                        </div>
                    </span>
                </div><!-- /input-group
    </div><!-- /.col-lg-6 -->


