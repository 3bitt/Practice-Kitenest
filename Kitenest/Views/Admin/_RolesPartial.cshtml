@page



<h4>Roles list</h4>

<a asp-action="Create" asp-controller="Admin">Create New</a>
    <table class="table table-striped table-hover col-sm-6 col-lg-6 col-md-6 ">
        @foreach (var role in ViewBag.Roles)
        {
            <tr>
                <td class="col-sm-1 col-lg-4 col-md-4">
                    <strong>@role.Text </strong>
                </td>
                <td class="col-sm-1 col-lg-2 col-md-2">
                    <span onclick="return confirm('Czy na pewno chcesz usunąć rolę?')"><a href="/Roles/Delete?RoleName=@role.Text" class="delLink" style="color:red;">Usuń</a></span> |
                    @Html.ActionLink("Edytuj", "Edit", new { roleName = @role.Text })
                </td>
            </tr>
        }
    </table>

