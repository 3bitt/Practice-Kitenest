@model IEnumerable<Kitenest.Models.Country>


<table class="table">
    <thead>
        <tr>
            <th>
                Countries
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Countries" asp-route-id="@item.Id">Edit</a> |

                <a asp-action="Delete" asp-controller="Countries" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
