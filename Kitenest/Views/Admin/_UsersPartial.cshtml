

<h4>Users list</h4>

<a asp-action="Create" asp-controller="Admin">Create New</a>
<table class="table table-striped table-hover col-sm-6 col-lg-6 col-md-6 ">
    @foreach (var user in ViewBag.Users)
    {
        <tr>
            <td class="col-sm-1 col-lg-4 col-md-4">
                <strong>@user.Text </strong>
            </td>
            <td class="col-sm-1 col-lg-2 col-md-2">
                <span onclick="return confirm('Do you really want to delete that user?')"><a href="/Roles/Delete?RoleName=@user.Text" class="delLink" style="color:red;">Delete</a></span> |
                @Html.ActionLink("Edit", "Edit", new { roleName = @user.Text })
            </td>
        </tr>
    }
</table>

